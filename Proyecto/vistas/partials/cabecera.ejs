<%
/**
 * Muestra el saludo si el usuario esta registrado, en caso de que no lo este,
 * muestra que es un usuario desconocido.
 */
function mostrarSaludo(session){
	if (session == null || ! session.login){
		return `<p>Usuario desconocido. <a href="/usuarios/login">Login</a><p>Registrarse. <a href="/usuarios/register">Register</a></p>`;
	}

	return `<p>Bienvenido ${session.nombre}. <a href="/usuarios/logout">(salir)</a></p>`;
}
%><header>
		<div class="marca">
		<a href="/usuarios/login" class="logo"><img src="/img/logo.png" alt="Logo"></a>
		<h1>ChangeDEX</h1>
		</div>
		<div class="saludo">
			<%- mostrarSaludo(session) %>
		</div>
</header>