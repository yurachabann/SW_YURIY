<h1>Borrado de cartas</h1>

<form action="/cartas/eliminarCarta" method="POST">
<fieldset>
	<% if (locals.mensaje) { %>
		<p><strong><%= locals.mensaje %></strong></p>
	<% } %>
	<legend>Nombre de la carta a borrar</legend>
	<div><label>Nombre:</label> <input type="text" name="name" /></div>
	<button type="submit">Eliminar</button>
</fieldset>
