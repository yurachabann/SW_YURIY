<form action="/mazos/addMazo" method="POST" id="form-seleccion">
  <fieldset>
    <legend>Añadir mazo</legend>
    <% if (locals.mensaje) { %>
      <p><strong><%= locals.mensaje %></strong></p>
    <% } %>

    <div class="form-group">
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" required>
    </div>
    
    <!-- GRID DE CARTAS -->
    <div class="form-group">
      <label>Cartas (selecciona 10):</label>
      <p id="contador" class="form-hint">Seleccionadas: 0/10</p>
      <div class="cartas-grid">
        <% cartas.forEach(carta => { %>
          <label class="carta-item-seleccionar">
            <input
              type="checkbox"
              name="cartas[]"
              value="<%= carta.id %>"
            >
            <img
              src="<%= carta.Imagen || 'https://i.pinimg.com/736x/b4/49/0a/b4490a5661fb671aa2c1b13daa2e7faa.jpg' %>"
              alt="<%= carta.nombre %>"
            >
            <div class="carta-info">
              <h4><%= carta.nombre %></h4>
              <p>Colección: <%= EnumColecciones[carta.coleccion] || 'N/D' %></p>
              <p>Rareza: <%= EnumRarezas[carta.rareza] || 'N/D' %></p>
              <p>Vida: <%= carta.vida %></p>
            </div>
          </label>
        <% }) %>
      </div>
    </div>

    <div class="form-group">
      <button type="submit">Agregar Mazo</button>
    </div>
  </fieldset>
</form>

<script src="/js/seleccionCartas.js" defer></script>