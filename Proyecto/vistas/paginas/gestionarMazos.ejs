<h2>Gestionar Tus Mazos</h2>

<% if (locals.mensaje) { %>
    <p><strong><%= locals.mensaje %></strong></p>
<% } %>

<a href="/mazos/addMazo" class="btn btn-crear">Crear un nuevo mazo</a>

<a href="/mazos/preModificarMazo" class="btn btn-modificar">Modificar Mazo</a>

<a href="/mazos/eliminarMazo" class="btn btn-eliminar">Eliminar Mazo</a>

<table border="1">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cartas</th>
        </tr>
    </thead>
    <tbody>
        <% if (mazos.length > 0) { %>
            <% mazos.forEach(mazo => { %>
                <tr>
                    <td><%= mazo.nombre %></td>
                    <td><%= mazo.cartas %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="2">No hay mazos disponibles</td>
            </tr>
        <% } %>
    </tbody>
</table>

