<h1>Borrado de mazos</h1>

<form action="/mazos/eliminarMazoAdmin" method="POST">
  <fieldset>
    <% if (locals.mensaje) { %>
      <p><strong><%= locals.mensaje %></strong></p>
    <% } %>
    <legend>Nombre del mazo a borrar</legend>

    <% if (mazos.length > 0) { %>
      <div>
        <label for="mazo">Mazo:</label>
        <select name="name" id="mazo" required>
          <option value="" selected disabled>-- Selecciona un mazo --</option>
          <% mazos.forEach(m => { %>
            <option value="<%= m.nombre %>">
              <%= m.nombre %> (Creador: <%= m.creador || 'Admin' %>)
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit">Eliminar</button>
    <% } else { %>
      <p>No hay mazos disponibles.</p>
    <% } %>

  </fieldset>
</form>
