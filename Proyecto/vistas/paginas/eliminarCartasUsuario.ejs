<h1>Borrar TODAS las cartas del usuario</h1>

<form action="/cartas/eliminarCartas" method="POST">
  <fieldset>
    <% if (locals.mensaje) { %>
      <p><strong><%= locals.mensaje %></strong></p>
    <% } %>
    <legend>Nombre del usuario</legend>

    <% if (usuarios.length === 0) { %>
      <p>No hay usuarios con cartas a√∫n.</p>
    <% } else { %>
      <div>
        <label for="usuario">Usuario:</label>
        <select name="name" id="usuario" required>
          <option value="" selected disabled>-- Selecciona un usuario --</option>
          <% usuarios.forEach(u => { %>
            <option value="<%= u.nombre %>">
              <%= u.nombre %> (<%= u.username %>)
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit">Eliminar</button>
    <% } %>

  </fieldset>
</form>
