<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fuerza</th>
            <th>TipoCarta</th>
        </tr>
    </thead>
    <tbody>
        <% if (cartas.length > 0) { %>
            <% cartas.forEach(carta => { %>
                <tr>
                    <td><%= carta.id %></td>
                    <td><%= carta.nombre %></td>
                    <td><%= carta.fuerza %></td>
                    <td><%= carta.tipocarta %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="4">No hay cartas disponibles</td>
            </tr>
        <% } %>
    </tbody>
</table>
